---
interface Props {
  title: string;
  img: string;
}
const { title, img } = Astro.props;
---

<div class="flex flex-col p-4 bg-white z-10">
  <p class="font-bold text-xl">{title}</p>
  <img src=`${img}` alt="image_product" />
  <a class="text-blue-700 text-sm hover:underline">Shop More</a>
</div>

